<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_hr_payslip_and_att" model="ir.ui.view">
            <field name="name">hr_payroll_payslip_att</field>
            <field name="model">hr.attendance.employees</field>
            <field name="arch" type="xml">
                <form string="Attendance Sheet by Employees">
                    <group>
                      <field name="field1" />
                      <field name="field2" />
                      <field name="field3" />
                    </group>

                    <group colspan="4" >
                        <separator string="Employees" colspan="4"/>
                        <newline/>
                        <field name="employee_ids" nolabel="1"/>
                    </group>
                    <footer>
                        <button icon="fa-cogs" string="Generate" name="compute_sheet" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_batch_Attan" model="ir.actions.act_window">
            <field name="name">Attendance Sheet</field>
            <field name="res_model">hr.attendance.employees</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_payslip_and_att"/>
            <field name="target">new</field>
        </record>

</odoo>
